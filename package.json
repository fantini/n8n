{
  "name": "n8n-monorepo",
  "version": "1.91.0",
  "private": true,
  "engines": {
    "node": ">=20.15",
    "pnpm": ">=10.2.1"
  },
  "packageManager": "pnpm@10.2.1",
  "scripts": {
    "prepare": "node scripts/prepare.mjs",
    "preinstall": "node scripts/block-npm-install.js",
    "build": "pnpm --recursive --parallel build",
    "build:backend": "pnpm --filter \"@n8n/*\"... build",
    "build:frontend": "pnpm --filter \"@n8n/frontend/*\"... build",
    "build:nodes": "pnpm --filter \"n8n-nodes-base\" --filter \"@n8n/n8n-nodes-langchain\" build",
    "typecheck": "turbo typecheck",
    "dev": "pnpm --filter \"!@n8n/design-system\" --filter \"!@n8n/chat\" --filter \"!@n8n/task-runner\" --parallel --stream dev",
    "dev:be": "pnpm --filter \"!@n8n/design-system\" --filter \"!@n8n/chat\" --filter \"!@n8n/task-runner\" --filter \"!n8n-editor-ui\" --parallel --stream dev",
    "dev:ai": "pnpm --filter \"@n8n/nodes-langchain\" --filter \"n8n\" --filter \"n8n-core\" --parallel --stream dev",
    "dev:fe": "run-p start \"dev:fe:editor --filter=@n8n/design-system\"",
    "dev:fe:editor": "pnpm --filter \"n8n-editor-ui\" --parallel --stream dev",
    "dev:e2e": "cd cypress && pnpm run test:e2e:dev",
    "dev:e2e:v1": "cd cypress && pnpm run test:e2e:dev:v1",
    "debug:flaky:e2e": "cd cypress && pnpm run test:flaky",
    "dev:e2e:server": "run-p start dev:fe:editor",
    "clean": "pnpm --recursive --parallel clean",
    "reset": "node scripts/ensure-zx.mjs && zx scripts/reset.mjs",
    "format": "turbo run format && node scripts/format.mjs",
    "format:check": "turbo run format:check",
    "lint": "turbo run lint",
    "lintfix": "turbo run lintfix",
    "lint:backend": "turbo run lint:backend",
    "lint:nodes": "turbo run lint:nodes",
    "lint:frontend": "turbo run lint:frontend",
    "optimize-svg": "find ./packages -name '*.svg' ! -name 'pipedrive.svg' -print0 | xargs -0 -P16 -L20 npx svgo",
    "start": "run-script-os",
    "start:default": "pnpm --filter cli start",
    "start:tunnel": "pnpm --filter cli start -- --tunnel",
    "start:windows": "pnpm --filter cli start",
    "test": "JEST_JUNIT_CLASSNAME={filepath} turbo run test",
    "test:backend": "pnpm --filter \"@n8n/*\"... test -- --runInBand",
    "test:frontend": "pnpm --filter \"@n8n/frontend/*\"... test -- --runInBand",
    "test:nodes": "pnpm --filter \"n8n-nodes-base\" --filter \"@n8n/n8n-nodes-langchain\" test -- --runInBand",
    "watch": "pnpm --recursive --parallel watch",
    "webhook": "pnpm --filter cli webhook",
    "worker": "pnpm --filter cli worker"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@n8n/eslint-config": "workspace:*",
    "@types/jest": "^29.5.3",
    "@types/node": "*",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-expect-message": "^1.1.3",
    "jest-junit": "^16.0.0",
    "jest-mock": "^29.6.2",
    "jest-mock-extended": "^3.0.4",
    "lefthook": "^1.7.15",
    "nock": "^14.0.1",
    "nodemon": "^3.0.1",
    "npm-run-all2": "^7.0.2",
    "p-limit": "^3.1.0",
    "rimraf": "^5.0.1",
    "run-script-os": "^1.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.10",
    "tsc-watch": "^6.2.0",
    "turbo": "2.3.3",
    "typescript": "*",
    "zx": "^8.1.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sqlite3"
    ],
    "overrides": {
      "@types/node": "^18.16.16",
      "chokidar": "^4.0.1",
      "esbuild": "^0.24.0",
      "formidable": "3.5.1",
      "pug": "^3.0.3",
      "semver": "^7.5.4",
      "tslib": "^2.6.2",
      "tsconfig-paths": "^4.2.0",
      "typescript": "^5.8.2",
      "vue-tsc": "^2.2.8",
      "ws": ">=8.17.1"
    },
    "patchedDependencies": {
      "bull@4.16.4": "patches/bull@4.16.4.patch",
      "pkce-challenge@5.0.0": "patches/pkce-challenge@5.0.0.patch",
      "@types/express-serve-static-core@5.0.6": "patches/@types__express-serve-static-core@5.0.6.patch",
      "@types/ws@8.5.4": "patches/@types__ws@8.5.4.patch",
      "@types/uuencode@0.0.3": "patches/@types__uuencode@0.0.3.patch",
      "vue-tsc@2.2.8": "patches/vue-tsc@2.2.8.patch",
      "eslint-plugin-n8n-local-rules": "patches/eslint-plugin-n8n-local-rules.patch",
      "element-plus@2.4.3": "patches/element-plus@2.4.3.patch"
    }
  }
}
